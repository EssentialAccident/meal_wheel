= form_with model: @meal, local: true do |form|
  .row.g-3.align-items-center.mb-4 
    .col-auto
      = form.label 'Meal name'
    .col-auto
      = form.text_field :name, class: 'form-control', autofocus: 'autofocus'
  - step_counter = 1
  = form.fields_for :recipes do |recipe_form|
    .row.g-3.align-items-center.mb-4
      .col-auto
        = recipe_form.label "Step #{step_counter}", class: 'form-label'
        = recipe_form.text_area :step, size: '70x7', class: 'form-control'
    - step_counter += 1

  .row.g-3.align-items-center.mb-4
    .col-auto
      = form.submit 'Submit', class: 'btn btn-primary'
    .col-auto
      = link_to 'Back to the meals page', meals_path, class: 'btn btn-danger' 