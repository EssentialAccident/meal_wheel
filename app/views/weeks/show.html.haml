.container
  %h1.mb-5 
    Week starting on 
    = @week.start_date.strftime('%A, %b %d, %Y')
  .row.align-items-center.mt-5.mb-5
    .col-auto
      %table.table
        %thead
          %tr
            %th{scope: 'col'} Date
            %th{scope: 'col'} Meal
        %tbody
          - @week.days.each do |day|
            %tr
              %td 
                = day.date.strftime('%a, %b %d')
              %td
                = day.meal.name
  .row.g-3.align-items-center
    .col-auto
      = link_to 'Edit', edit_week_path(@week), class: 'btn btn-info'
    .col-auto
      = link_to 'Back', weeks_path, class: 'btn btn-primary'
